@model BoublikSystem.Models.ChangeSaleModel


    <div class="col-md-2 col-sm-3 col-xs-4">
        <div class="panel panel-primary">
            <div class="panel-body">
                <p>
                    <small class="">
                        @{
                            if (Model.Count > 0)
                            {
                                <b>
                                    @Model.Product.Name
                                </b>
                            }
                            else
                            {
                                <del>
                                    @Model.Product.Name
                                </del>
                            }
                        }
                    </small>
                </p>
                <small class="" style="color: black;">Кол: <span id="@string.Format("{0}{1}", "productCountId", Model.Product.Id)">@Model.Count</span></small>
                <small class="" style="color: black;">Цена: @Model.Product.Price  </small>
            </div>
        </div>
    </div>
