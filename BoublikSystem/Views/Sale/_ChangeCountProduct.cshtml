@model BoublikSystem.Controllers.ChangeSaleModel

<div class="panel panel-primary">
    <div class="panel-body">
        <p>
            <small class="">
                @{
                    if (Model.Count > 0)
                    {
                        <b>
                            @Html.ActionLink(Model.Product.Name, "AskForCount", "Sale",
                            new { productId = Model.Product.Id },
                            new { @class = "compItem" })
                        </b>
                    }
                    else
                    {
                        <del>
                            @Model.Product.Name
                        </del>
                    }
                }

            </small>
        </p>
        <small class="">Кол: <span id="@string.Format("{0}{1}", "productCountId", Model.Product.Id)">@Model.Count</span></small>
        <small class="">Цена: @Model.Product.Price</small>
    </div>
</div>

